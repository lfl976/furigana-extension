{
  "manifest_version": 3,
  "name": "日语注音助手 (Furigana Helper)",
  "version": "1.0",
  "description": "选中日文句子，点击按钮显示注音。",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "打开注音助手"
  },
  "background": {
    "service_worker": "background.js"
  }
}
